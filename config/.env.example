# Environment Variables Template
# Copy this file to .env and fill in with your actual values

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=development
FLASK_APP=app/voice_assistant_clean.py
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False

# ============================================
# API Keys & Credentials
# ============================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key-here

# Repliers API
REPLIERS_API_KEY=your-repliers-api-key
REPLIERS_BASE_URL=https://api.repliers.io

# Exa AI (for real-time data)
EXA_API_KEY=your-exa-api-key

# HuggingFace (for models)
HUGGINGFACE_API_TOKEN=hf_your-huggingface-token
HUGGINGFACE_PRIMARY_MODEL=facebook/blenderbot-400M-distill
HUGGINGFACE_FALLBACK_MODEL=microsoft/DialoGPT-medium

# ============================================
# Database Configuration (Optional)
# ============================================
DATABASE_URL=sqlite:///app.db

# ============================================
# Application Settings
# ============================================

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=5050
WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Session
SESSION_TIMEOUT=1800
MAX_CONVERSATIONS=100

# ============================================
# Feature Flags
# ============================================
ENABLE_VOICE_INPUT=True
ENABLE_LEAD_CAPTURE=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_ANALYTICS=True

# ============================================
# Open AI Wrapper Feature Flags
# ============================================
# Master switch for the Open AI wrapper (set to false to bypass entirely)
OPENAI_ENABLE_WRAPPER=true

# Use combined interpreter for intent+location in one call (reduces latency)
# Default: false (uses separate calls for safety)
OPENAI_USE_COMBINED_INTERPRETER=false

# Allow experimental models (e.g., GPT-5-nano)
# Default: false (falls back to gpt-4o-mini for stability)
OPENAI_ALLOW_EXPERIMENTAL_MODELS=false

# Enable circuit breaker to prevent cascading failures
OPENAI_ENABLE_CIRCUIT_BREAKER=true

# Enable response caching for deterministic calls (temperature=0)
OPENAI_ENABLE_CACHE=true

# Open AI API timeout in seconds
OPENAI_TIMEOUT_SECONDS=30

# Maximum retry attempts for failed API calls
OPENAI_MAX_RETRIES=3

# Number of consecutive failures before circuit breaker trips
OPENAI_CIRCUIT_BREAKER_THRESHOLD=5

# Seconds before circuit breaker resets after tripping
OPENAI_CIRCUIT_BREAKER_RESET_SECONDS=60

# Cache TTL in seconds (1 hour default)
OPENAI_CACHE_TTL_SECONDS=3600

# Maximum cache entries
OPENAI_CACHE_MAX_SIZE=1000

# ============================================
# Deployment
# ============================================
ENVIRONMENT=development
VERSION=3.0.0
