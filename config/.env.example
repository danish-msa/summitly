# Environment Variables Template
# Copy this file to .env and fill in with your actual values

# ============================================
# Flask Configuration
# ============================================
FLASK_ENV=development
FLASK_APP=app/voice_assistant_clean.py
SECRET_KEY=your-secret-key-change-in-production
DEBUG=False

# ============================================
# API Keys & Credentials
# ============================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-key-here

# Repliers API
REPLIERS_API_KEY=your-repliers-api-key
REPLIERS_BASE_URL=https://api.repliers.io

# Exa AI (for real-time data)
EXA_API_KEY=your-exa-api-key

# HuggingFace (for models)
HUGGINGFACE_API_TOKEN=hf_your-huggingface-token
HUGGINGFACE_PRIMARY_MODEL=facebook/blenderbot-400M-distill
HUGGINGFACE_FALLBACK_MODEL=microsoft/DialoGPT-medium

# ============================================
# Database Configuration (Optional)
# ============================================
DATABASE_URL=sqlite:///app.db

# ============================================
# Application Settings
# ============================================

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=5050
WORKERS=4

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Session
SESSION_TIMEOUT=1800
MAX_CONVERSATIONS=100

# ============================================
# Feature Flags
# ============================================
ENABLE_VOICE_INPUT=True
ENABLE_LEAD_CAPTURE=True
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_ANALYTICS=True

# ============================================
# Deployment
# ============================================
ENVIRONMENT=development
VERSION=3.0.0
