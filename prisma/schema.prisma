// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  phone         String? // Phone number field
  password      String? // For credentials authentication
  role          UserRole  @default(SUBSCRIBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts           Account[]
  sessions           Session[]
  properties         Property[]
  favorites          Favorite[]
  savedProperties    SavedProperty[]
  searches           SearchHistory[]
  propertyWatchlists PropertyWatchlist[]
  agentProfile       AgentProfile?
  tours              Tour[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Property {
  id           String         @id @default(cuid())
  mlsNumber    String         @unique
  title        String
  description  String?        @db.Text
  price        Float
  propertyType PropertyType
  status       PropertyStatus @default(ACTIVE)

  // Address
  streetNumber String?
  streetName   String?
  city         String
  state        String
  zipCode      String?
  country      String  @default("US")

  // Property Details
  bedrooms   Int
  bathrooms  Float
  squareFeet Int?
  lotSize    Float?
  yearBuilt  Int?

  // Coordinates
  latitude  Float?
  longitude Float?

  // Images
  images String[] @default([])

  // Features
  features String[] @default([])

  // Agent/User
  userId String
  user   User   @relation(fields: [userId], references: [id])

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  favorites Favorite[]
  views     PropertyView[]
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@unique([userId, propertyId])
}

// Saved properties from MLS/external listings (using MLS number as identifier)
model SavedProperty {
  id        String   @id @default(cuid())
  userId    String
  mlsNumber String // MLS number from PropertyListing
  notes     String?  @db.Text // User's personal notes
  tags      String[] @default([]) // User-defined tags
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, mlsNumber])
  @@index([userId])
  @@index([mlsNumber])
}

model PropertyView {
  id         String   @id @default(cuid())
  propertyId String
  userId     String?
  ipAddress  String?
  userAgent  String?
  viewedAt   DateTime @default(now())

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model SearchHistory {
  id           String        @id @default(cuid())
  userId       String
  query        String?
  location     String?
  minPrice     Float?
  maxPrice     Float?
  bedrooms     Int?
  bathrooms    Int?
  propertyType PropertyType?
  searchedAt   DateTime      @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AgentProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  bio         String?  @db.Text
  phone       String?
  license     String?
  specialties String[] @default([])
  languages   String[] @default([])
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Contact {
  id         String        @id @default(cuid())
  name       String
  email      String
  phone      String?
  message    String        @db.Text
  propertyId String?
  type       ContactType   @default(GENERAL)
  status     ContactStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

enum UserRole {
  SUBSCRIBER
  ADMIN
  SUPER_ADMIN
}

enum PropertyType {
  HOUSE
  APARTMENT
  CONDO
  TOWNHOUSE
  VILLA
  OFFICE
  COMMERCIAL
  LAND
  OTHER
}

enum PropertyStatus {
  ACTIVE
  PENDING
  SOLD
  RENTED
  INACTIVE
}

enum ContactType {
  GENERAL
  PROPERTY_INQUIRY
  AGENT_REQUEST
  SUPPORT
}

enum ContactStatus {
  PENDING
  CONTACTED
  RESOLVED
  CLOSED
}

// Property Watchlist/Alerts - stores user's alert preferences
model PropertyWatchlist {
  id              String   @id @default(cuid())
  userId          String
  mlsNumber       String? // If watching a specific property
  cityName        String?
  neighborhood    String?
  propertyType    String?
  watchProperty   Boolean  @default(false) // Watch specific property updates
  newProperties   Boolean  @default(false) // Alert for new properties in area
  soldListings    Boolean  @default(false) // Alert for sold listings in area
  expiredListings Boolean  @default(false) // Alert for expired listings in area
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([mlsNumber])
  @@index([cityName, neighborhood])
}

// Property Tours - stores scheduled tours for properties
model Tour {
  id            String     @id @default(cuid())
  userId        String
  mlsNumber     String // MLS number of the property
  tourType      TourType   @default(IN_PERSON)
  scheduledDate DateTime // Combined date and time
  name          String
  phone         String
  email         String
  preApproval   Boolean    @default(false)
  status        TourStatus @default(PENDING)
  notes         String?    @db.Text
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([mlsNumber])
  @@index([scheduledDate])
}

enum TourType {
  IN_PERSON
  VIDEO_CHAT
  SELF_GUIDED
}

enum TourStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}

// DevelopmentTeam - stores developer and development team member information
model DevelopmentTeam {
  id          String   @id @default(cuid())
  name        String
  type        DeveloperType
  description String?  @db.Text
  website     String?
  image       String? // Profile/image URL
  email       String?
  phone       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([type])
  @@index([name])
}

enum DeveloperType {
  DEVELOPER
  ARCHITECT
  INTERIOR_DESIGNER
  BUILDER
  LANDSCAPE_ARCHITECT
  MARKETING
}

// Pre-Construction Projects - stores pre-construction project data
model PreConstructionProject {
  id            String @id @default(cuid())
  mlsNumber     String @unique // Auto-generated unique identifier from project name
  projectName   String
  developer     String?
  startingPrice Float?
  endingPrice   Float?
  avgPricePerSqft Float? // Average price per square foot
  status        String? // 'platinum-access', 'now-selling', 'assignments', 'new-release-coming-soon', 'coming-soon', 'register-now', 'resale', 'sold-out'
  
  // Additional Pricing
  parkingPrice      Float?
  parkingPriceDetail String? @db.Text
  lockerPrice       Float?
  lockerPriceDetail String? @db.Text
  assignmentFee     Float?
  developmentLevies Float?
  developmentCharges Float?

  // Address
  streetNumber      String?
  streetName        String?
  city              String?
  state             String?
  zip               String?
  country           String?  @default("Canada")
  neighborhood      String?
  majorIntersection String?

  // Coordinates
  latitude  Float?
  longitude Float?

  // Property Details
  propertyType   String? // 'Condos', 'Houses', 'Lofts', 'Master-Planned Communities', 'Multi Family', 'Offices'
  subPropertyType String? // 'Low-Rise', 'Mid-Rise', 'High-Rise' (for Condos) or 'Link', 'Townhouse', 'Semi-Detached', 'Detached' (for Houses)
  bedroomRange   String? // e.g., '1-3' (range format)
  bathroomRange  String? // e.g., '1-3'
  sqftRange      String? // e.g., '650-1,450'
  hasDen         Boolean @default(false) // Unit has den available
  hasStudio      Boolean @default(false) // Studio units available
  hasLoft        Boolean @default(false) // Loft units available
  hasWorkLiveLoft Boolean @default(false) // Work/Live Loft units available
  totalUnits     Int?
  availableUnits Int?
  suites         Int?
  storeys        Int?
  height         String? // Height in meters (e.g., "9'0\" to 10'0\"")
  
  // Maintenance & Fees
  maintenanceFeesPerSqft Float?
  maintenanceFeesDetail  String? @db.Text
  floorPremiums          String? @db.Text

  // Completion
  occupancyDate      String? // e.g., 'Q4 2025'
  completionProgress Int? // 0 = Pre-construction, 1 = Construction, 2 = Complete
  promotions         String? // '5% Down Payment', '10% Down Payment', '15% Down Payment'
  
  // Additional Details
  ownershipType String? // Ownership type
  garage        String? // 'single', 'double', 'triple', 'other'
  basement      String? // 'finished', 'unfinished'

  // Images
  images String[] @default([])

  // Videos
  videos String[] @default([])

  // Features and Amenities
  features  String[] @default([])
  amenities String[] @default([])

  // Additional Info
  depositStructure String? @db.Text
  description      String? @db.Text
  documents        String? @db.Text // JSON string for documents array

  // Development Team (stored as JSON)
  developerInfo         String? @db.Text // JSON string for developer details
  architectInfo         String? @db.Text // JSON string for architect details
  builderInfo           String? @db.Text // JSON string for builder details
  interiorDesignerInfo  String? @db.Text // JSON string for interior designer details
  landscapeArchitectInfo String? @db.Text // JSON string for landscape architect details
  marketingInfo         String? @db.Text // JSON string for marketing details
  salesMarketingCompany String? // Sales & Marketing Company ID
  developmentTeamOverview String? @db.Text // Overview of the development team

  // Publication Status
  isPublished Boolean @default(false) // Draft projects are not visible on public website
  featured Boolean @default(false) // Featured projects are highlighted on the website

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  units PreConstructionUnit[]

  @@index([city])
  @@index([status])
  @@index([propertyType])
  @@index([isPublished])
  @@index([featured])
}

// Pre-Construction Units - stores individual units within a project
model PreConstructionUnit {
  id        String                 @id @default(cuid())
  projectId String
  project   PreConstructionProject @relation(fields: [projectId], references: [id], onDelete: Cascade)

  unitName       String // e.g., '101', '202'
  beds           Int
  baths          Int
  sqft           Int
  price          Float
  maintenanceFee Float?
  status         String // 'for-sale', 'sold-out', 'reserved'

  images         String[] @default([]) // Multiple images for the unit (floorplans, renderings, etc.)
  description    String?  @db.Text
  features       String[] @default([])
  amenities      String[] @default([])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
  @@index([status])
}

// Property Ratings - stores ratings for ALL property types (regular listings, pre-cons, etc.)
model PropertyRating {
  id           String   @id @default(cuid())
  propertyId   String // Can be mlsNumber for regular properties or projectId for pre-cons
  propertyType String // 'regular', 'pre-construction' - to distinguish property types
  userId       String? // Optional user ID if user is logged in, null for anonymous ratings
  sessionId    String? // Session ID for anonymous users to prevent duplicate ratings
  rating       Int // Rating value from 1 to 5 stars
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([propertyId])
  @@index([propertyType])
  @@index([userId])
  @@index([propertyId, propertyType])
  @@index([propertyId, rating])
  @@index([propertyId, sessionId])
}

// Pre-Construction Page Content - stores custom content for filtered pages
model PreConstructionPageContent {
  id          String   @id @default(cuid())
  pageType    String   // 'propertyType', 'status', 'completionYear', 'by-location'
  pageValue   String   // e.g., 'Condos', 'now-selling', '2025', 'Toronto'
  locationType String? // 'by-city', 'by-area', 'by-neighbourhood', 'by-intersection', 'by-communities' (only for pageType='by-location')
  parentId    String?  // ID of parent location (for hierarchy: city -> area -> neighbourhood -> intersection)
  title       String?  @db.Text
  description String?  @db.Text
  heroImage   String?
  metaTitle   String?  @db.Text
  metaDescription String? @db.Text
  customContent String? @db.Text // JSON or rich text content
  faqs        String?  @db.Text // JSON array of FAQ items
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Self-referential relation for parent-child hierarchy
  parent   PreConstructionPageContent? @relation("LocationHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children PreConstructionPageContent[] @relation("LocationHierarchy")

  @@unique([pageType, pageValue])
  @@index([pageType])
  @@index([pageValue])
  @@index([isPublished])
  @@index([locationType])
  @@index([parentId])
}
